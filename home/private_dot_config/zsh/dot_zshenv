export ZDOTDIR="${XDG_CONFIG_HOME}/zsh"
export SRC_DIR="$HOME/src"

export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export EDITOR="vim"
export VISUAL="vim"
export PAGER="less"
export LESS="-R"

export PATH="${HOME}/.local/bin:${SRC_DIR}/bin:${HOME}/.cargo/bin:${PATH}"

for file in ${ZDOTDIR}/env.d/*; do
  source "$file"
done